<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
              xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">

    <caching-scheme-mapping>
        <cache-mapping>
            <cache-name>streams*</cache-name>
            <scheme-name>Streams-Partitioned</scheme-name>
        </cache-mapping>
    </caching-scheme-mapping>

    <caching-schemes>
        <distributed-scheme>
            <scheme-name>Streams-Partitioned</scheme-name>
            <service-name>Streams-PartitionedCacheService</service-name>
            <backup-count>0</backup-count>
            <backing-map-scheme>
                <local-scheme/>
            </backing-map-scheme>
        </distributed-scheme>

    </caching-schemes>
</cache-config>